<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle"   >
            <gradient
                android:startColor="#1C470B"
                android:centerColor="#27680E"
                android:endColor="#387C1D"
                android:angle="90"/>


            <corners
                android:radius="11dp"   >
            </corners>
        </shape>
    </item>
    <item android:bottom="15px" android:right="15px">
        <shape
            android:shape="rectangle"   >

            <gradient
                android:startColor="#91F59B"
                android:centerColor="#73C452"
                android:endColor="#69B54B"
                android:angle="90"/>



            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp"    >
            </padding>

            <corners
                android:radius="11dp"   >
            </corners>
        </shape>
    </item>
</layer-list>